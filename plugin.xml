		<source-file src="src/android/FacebookEventOS.java" target-dir="src/cordovaPluginFacebookEventOS/FacebookEventOS"/>
		<framework src="com.facebook.android:facebook-android-sdk:12.3.0"/>
	</platform>

	<platform name="ios">
